<view class="cover {{isShow?'active':''}}">
   <view class='header'>
    <text class='close' bindtap='handleClose'>关闭</text>
    <text>{{isTidy?'整理书桌':'我的书桌'}}</text>
    <text class="settle" bindtap='handleTidy' > {{isTidy?'取消':'整理'}}</text>
  </view>
  <view class='main'>
  <view class='info' wx:for="{{AddArr}}" wx:key="{{index}}">
    <text class="iconfont icon-xuanze {{isTidy?'active':''}} {{item.isSelect?'bg-green':''}}" bindtap='handleSelect' data-num="{{index}}"></text>
    <image src='{{item.imgAddr}}'></image>
    <text>{{item.articleName}}</text>
  </view>

  </view>

 <view class="footer {{isTidy?'active':''}}">
  <text>置顶</text>
  <text bindtap='handleDel'>移除</text>
</view>
</view>