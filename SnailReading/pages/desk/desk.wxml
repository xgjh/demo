<!-- pages/desk/desk.wxml-->
<text class='iconfont icon-kuailiebiao' bindtap='handleToDesk'></text>
<swiper circular="{{true}}" bindchange='handleindex'>
  <block wx:for="{{AddArr}}" wx:key="{{index}}" wx:if="{{index<4}}">
    <swiper-item>
      <image src="{{item.imgAddr}}" class="slide-image" mode='aspectFill'/>
    </swiper-item>
  </block>
</swiper>

<view class='pot' >
  <view wx:for="{{AddArr}}" wx:key="{{index}}" class="{{potIndex==index?'active':''}}" wx:if="{{index<4}}"></view>
</view>

<view class='footer'>
  <text class='bookname'>{{AddArr[potIndex].articleName}}</text>
  <text class='author'>{{AddArr[potIndex].author}}</text>
</view>

