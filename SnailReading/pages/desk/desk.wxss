/* pages/desk/desk.wxss */
@import "../../utils/icon.wxss";
.iconfont{
  position: absolute;
  top: 15rpx;
  right: 30rpx;
  font-size: 50rpx;
}
swiper,
swiper-item,
image{
  width: 400rpx;
  height: 560rpx;
  border-radius: 6rpx;
}
swiper{
  margin: 0 auto;
  margin-top: 140rpx;
  box-shadow: 0 0 20rpx 2rpx rgba(0, 0, 0, 0.2);
}
.pot{
  height: 5rpx;
  margin-top: 70rpx;
 display: flex;
 justify-content: center;
}
.pot>view{
  width: 40rpx;
  height: 5rpx;
  background: #ececec;
  border-radius: 2rpx;
}
.pot .active{
  background: #545454;
}
.footer{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.footer .bookname{
  font-size: 40rpx;
  margin: 70rpx 0;
  font-weight: bold;
}
.footer .author{
  font-size: 22rpx;
  color: #b3b3b3;
}

.cover{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  position: absolute;
  top: 100%;
  left: 0;
  transition: all 0.5s;
  background: #fff;
}
.cover.active{
  transform: translateY(-100%);
}
.cover .header{
  height: 90rpx;
  display: flex;
  padding: 0 30rpx;
  justify-content: space-between;
  align-items: center;
  border-bottom: #d8d8d8;
}
.cover .close,
.cover .settle{
  font-size: 28rpx;
  letter-spacing: 2rpx;
}
.main{
  box-sizing: border-box;
  padding: 100rpx 55rpx 0;
  display: flex;
  flex-wrap: wrap;
}

.info{
  width: 174rpx;
  height: 360rpx;
  margin-right: 60rpx;
  text-align: center;
  margin-bottom: 20rpx;
}
.info:nth-child(3n){
  margin-right: 0
}
.info image{
  width: 174rpx;
  height: 248rpx;
  box-shadow: 0 0 10rpx 1px #dedede;
}
.info text{
  font-size: 26rpx;
  line-height: 40rpx;
}

.info{
  position: relative;
}
.icon-xuanze{
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  color:grey;
  font-size: 30rpx;
  display: none;
}
.icon-xuanze.active{
  display: inline-block;
}

.cover .footer{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;
  background: #d9d9d9;
  display: none;
  font-size: 38rpx;
}
.cover .footer text{
  display: inline-block;
  width: 50%;
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  letter-spacing: 6rpx;
}
.cover .footer.active{
  display: block;
}
.bg-green{
  color: green;
}
