/* pages/read/read-detail/read-detail.wxss */
@import "../../../utils/icon.wxss";
.cont{
  width: 100%;
  height: 100%;
  background: #ececec;
}

  .info{
    background: #fff;
    padding: 40rpx 35rpx;
  }
  .info .tit{
  /* width: 690rpx; */
  font-size: 45rpx;
  font-weight: 700;
  line-height: 64rpx;
  margin-bottom: 35rpx;
 letter-spacing: 2px;
}
.people{
  margin-top: 40rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  position: relative;
}
.people image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}
.people .focus{
  font-size: 28rpx;
  display: inline-block;
  height: 60rpx;
  padding: 0 30rpx;
  border-radius: 12px;
  position: absolute;
  right: 30rpx;
  border: 1px solid #ececec;
  line-height: 60rpx;
  letter-spacing: 1px;
}
.info .words{
  margin-top: 80rpx;
  font-size: 30rpx;
  color: #444444;
  line-height: 50rpx;
  margin-bottom: 30rpx;
  letter-spacing: 1px;
}
.info .bigPic{
  width: 690rpx;
  margin-top: 30rpx;
  height: 300rpx;
  border-radius: 5rpx;
}
.footer{
  width: 700rpx;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 30rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #fff;
}
.iconfont{
  font-size: 38rpx;
}